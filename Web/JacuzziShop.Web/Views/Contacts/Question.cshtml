@model JacuzziShop.Web.ViewModels.Contacts.QuestionAskInputModel
@{
    this.ViewData["Title"] = "Ask question";
}
<h1>Ask Question</h1>
<form method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Name"> Nickname </label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" lass="text-danger"></span>
    </div>
    <br>
    <div class="form-group">
        <label asp-for="About"></label>
        <input asp-for="About" class="form-control" rows="2" />
        <span asp-validation-for="About" class="text-danger"></span>
    </div>
    <br>
    <div class="form-group">
        <label asp-for="QuestionDescription"></label>
        <textarea asp-for="QuestionDescription" class="form-control" rows="3"></textarea>
        <span asp-validation-for="QuestionDescription" class="text-danger"></span>
    </div>
    <br>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control"/>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <br>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
        Ask Question
    </button>
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">You are about to ask question</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div asp-validation-summary="All"></div>
                    We want to inform you that: Your question will be post in our FAQ "Frequently Asked Questions", are you sure you want to send your question?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                    <input type="submit" class="btn btn-primary" value="Yes, I am sure" />
                </div>
            </div>
        </div>
    </div>
</form>